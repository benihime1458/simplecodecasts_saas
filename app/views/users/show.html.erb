<div class="row">
  <div class="avatar col-md-3 text-center">
   <%= image_tag @user.profile.avatar.url %>
  </div>
  <div class="col-md-6 jumbotron">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h2><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h2>
        <div class="well profile-block">
          <h3>About Me</h3>
          <%= @user.profile.description %>
        </div>
    
    <% if current_user.plan_id == 2 %>
      <div class="well profile-block">
        <h3>Contact Info</h3>
        <%= @user.profile.phone_number %><br>
        <%= @user.profile.contact_email %><br>
      </div>
    <% end %>

  </div>
</div>